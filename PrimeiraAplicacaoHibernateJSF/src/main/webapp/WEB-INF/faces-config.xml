<?xml version="1.0" encoding="ISO-8859-1"?>
<faces-config version="2.0" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://java.sun.com/xml/ns/javaee">
    <application>
        <locale-config>
            <default-locale>pt_BR</default-locale>
        </locale-config>
        <message-bundle>i18n.Messages</message-bundle>
    </application>
    <navigation-rule>
        <!-- navigation rules (A RROTA) -->
        <from-view-id>/*</from-view-id> <!-- /* = todos os arquivos vão passar por esse filtro -->
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>adicionar</from-outcome>
            <to-view-id>/adicionar.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>remover</from-outcome>
            <to-view-id>/remover.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>editar</from-outcome>
            <to-view-id>/editar.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>